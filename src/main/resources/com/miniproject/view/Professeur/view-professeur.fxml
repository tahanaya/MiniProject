<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miniproject.CONTROLLER.PROFESSEUR.ViewProfesseurController">
    <stylesheets>
        <URL value="@../../css/view.css" /> <!-- Link to your CSS file -->
    </stylesheets>

    <children>
        <!-- Title -->
        <Text layoutX="62.0" layoutY="40.0" styleClass="title-text" text="Détails du Professeur" />

        <!-- VBox Container -->
        <VBox layoutX="50.0" layoutY="60.0" prefHeight="250.0" prefWidth="300.0" spacing="10.0" styleClass="details-box">
            <children>
                <!-- Nom -->
                <Label styleClass="detail-label" text="Nom:" />
                <Label fx:id="nomLabel" prefHeight="17.0" prefWidth="130.0" styleClass="dynamic-label" />

                <!-- Prénom -->
                <Label styleClass="detail-label" text="Prénom:" />
                <Label fx:id="prenomLabel" prefHeight="17.0" prefWidth="197.0" styleClass="dynamic-label" />

                <!-- Spécialité -->
                <Label styleClass="detail-label" text="Spécialité:" />
                <Label fx:id="specialiteLabel" prefHeight="17.0" prefWidth="92.0" styleClass="dynamic-label" />

                <!-- Close Button -->
                <Button onAction="#handleClose" prefWidth="140.0" styleClass="action-button" text="Fermer" />
            </children>
        </VBox>
    </children>
</AnchorPane>
