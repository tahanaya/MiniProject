<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miniproject.CONTROLLER.MODULE.AddModuleController" stylesheets="@../../css/view.css" styleClass="root">
    <children>
        <Label layoutX="200" layoutY="30" styleClass="module-title"  text="Ajouter un Module" />
        <Label layoutX="150.0" layoutY="132.0" styleClass="detail-label" text="Nom du Module :" />
        <TextField fx:id="nameField" layoutX="150.0" layoutY="94.0" prefWidth="300"  styleClass="input-field" promptText="exp: Analyse" />
        <Label layoutX="151.0" layoutY="76.0" styleClass="detail-label" text="Code du Module:" />
        <TextField fx:id="codeField" layoutX="150.0" layoutY="150.0" prefWidth="300"  styleClass="input-field" promptText="exp: Math1" />
        <Label layoutX="150.0" layoutY="182.0" styleClass="detail-label" text="Professeur :" />

        <ComboBox fx:id="professorComboBox" layoutX="150.0" layoutY="200.0" prefHeight="25.0" prefWidth="300.0" styleClass="input-field" promptText="Choisir un Professeur" />
        <Button layoutX="171.0" layoutY="250.0" onAction="#handleSave" prefWidth="100" styleClass="action-button"  text="Enregistrer" />
