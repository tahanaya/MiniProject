<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miniproject.CONTROLLER.EtudiantProfesseur.viewEtudiantProfesseurController">
    <stylesheets>
        <URL value="@../../css/view.css" /> <!-- Link to your CSS file -->
    </stylesheets>

    <children>
        <!-- Title -->
        <Text layoutX="50.0" layoutY="30.0" text="Student Details" styleClass="title-text" />

        <!-- VBox Container -->
        <VBox layoutX="50.0" layoutY="46.0" prefHeight="328.0" prefWidth="320.0" spacing="10.0" styleClass="details-box">
            <children>
                <!-- Matricule -->
                <Label text="Matricule:" styleClass="detail-label" />
                <Label fx:id="matriculeLabel" styleClass="dynamic-label" />

                <!-- Nom -->
                <Label text="Nom:" styleClass="detail-label" />
                <Label fx:id="nomLabel" styleClass="dynamic-label" />

                <!-- Prénom -->
                <Label text="Prénom:" styleClass="detail-label" />
                <Label fx:id="prenomLabel" styleClass="dynamic-label" />

                <!-- Date Naissance -->
                <Label text="Date Naissance:" styleClass="detail-label" />
                <Label fx:id="dateNaissanceLabel" styleClass="dynamic-label" />

                <!-- Email -->
                <Label text="Email:" styleClass="detail-label" />
                <Label fx:id="emailLabel" styleClass="dynamic-label" />

                <!-- Promotion -->
                <Label text="Promotion:" styleClass="detail-label" />
                <Label fx:id="promotionLabel" styleClass="dynamic-label" />

                <!-- Close Button -->
                <Button onAction="#handleClose" text="Fermer" styleClass="action-button" />
            </children>
        </VBox>
    </children>
</AnchorPane>
