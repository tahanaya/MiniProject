<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.miniproject.CONTROLLER.EtudiantProfesseur.ViewEtudiantProfesseurController"
          hgap="10" vgap="10" alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
    <!-- Title -->
    <VBox alignment="CENTER" spacing="20">
        <Label text="Détails de l'Étudiant" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    </VBox>

    <!-- Student Details -->
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <Label text="Matricule:" />
        <Label fx:id="labelMatricule" GridPane.columnIndex="1" />

        <Label text="Nom:" GridPane.rowIndex="1" />
        <Label fx:id="labelNom" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Prénom:" GridPane.rowIndex="2" />
        <Label fx:id="labelPrenom" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Date de Naissance:" GridPane.rowIndex="3" />
        <Label fx:id="labelDateNaissance" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Email:" GridPane.rowIndex="4" />
        <Label fx:id="labelEmail" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Promotion:" GridPane.rowIndex="5" />
        <Label fx:id="labelPromotion" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="20" GridPane.rowIndex="6">
        <Button text="Fermer" onAction="#handleClose" />
    </HBox>
</GridPane>
