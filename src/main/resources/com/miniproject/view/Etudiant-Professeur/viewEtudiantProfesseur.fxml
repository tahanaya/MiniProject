<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miniproject.CONTROLLER.EtudiantProfesseur.viewEtudiantProfesseurController">
    <stylesheets>
        <URL value="@../../css/view.css" /> <!-- Lien vers votre fichier CSS -->
    </stylesheets>

    <children>
        <!-- Titre Centré -->
        <Text layoutX="50.0" layoutY="30.0" styleClass="title-text" text="Détails de l'étudiant" />

        <!-- VBox Centré -->
        <VBox layoutX="50.0" layoutY="50.0" prefHeight="240.0" prefWidth="300.0" spacing="10.0" styleClass="details-box">
            <children>
                <!-- Matricule -->
                <HBox spacing="5.0">
                    <Label styleClass="detail-label" text="Matricule:" />
                </HBox>
                 <Label fx:id="matriculeLabel" prefHeight="30.0" prefWidth="230.0" styleClass="dynamic-label" />

                <!-- Nom -->
                <HBox spacing="5.0">
                    <Label styleClass="detail-label" text="Nom:" />
                </HBox>
                 <Label fx:id="nomLabel" prefHeight="30.0" prefWidth="293.0" styleClass="dynamic-label" />

                <!-- Prénom -->
                <HBox spacing="5.0">
                    <Label styleClass="detail-label" text="Prénom:" />
                </HBox>
                 <Label fx:id="prenomLabel" prefHeight="30.0" prefWidth="227.0" styleClass="dynamic-label" />

                <!-- Date de Naissance -->
                <HBox spacing="5.0">
                    <Label styleClass="detail-label" text="Date de Naissance:" />
                </HBox>
                 <Label fx:id="dateNaissanceLabel" prefHeight="30.0" prefWidth="202.0" styleClass="dynamic-label" />

                <!-- Email -->
                <HBox spacing="5.0">
                    <Label styleClass="detail-label" text="Email:" />
                </HBox>
                 <Label fx:id="emailLabel" prefHeight="30.0" prefWidth="236.0" styleClass="dynamic-label" />

                <!-- Promotion -->
                <HBox spacing="5.0">
                    <Label styleClass="detail-label" text="Promotion:" />
                </HBox>
                 <Label fx:id="promotionLabel" prefHeight="30.0" prefWidth="235.0" styleClass="dynamic-label" />

                <!-- Bouton Fermer Centré -->
                <Button maxWidth="100.0" onAction="#handleClose" styleClass="action-button" text="Fermer" />
            </children>
        </VBox>
    </children>
</AnchorPane>
