<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="485.0" prefWidth="472.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miniproject.CONTROLLER.ETUDIANT.EditStudentController">
    <children>
        <Text layoutX="50.0" layoutY="30.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Edit Student Details">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <VBox layoutX="50.0" layoutY="60.0" prefWidth="300.0" spacing="10.0">
            <children>
                <Label text="Matricule:" />
                <TextField fx:id="matriculeField" promptText="Enter Matricule" />

                <Label text="Nom:" />
                <TextField fx:id="nomField" promptText="Enter Nom" />

                <Label text="Prénom:" />
                <TextField fx:id="prenomField" promptText="Enter Prénom" />

                <Label text="Date Naissance (YYYY-MM-DD):" />
                <TextField fx:id="dateNaissanceField" promptText="e.g., 1990-01-01" />

                <Label text="Email:" />
                <TextField fx:id="emailField" promptText="Enter Email" />

                <Label text="Promotion:" />
                <TextField fx:id="promotionField" promptText="Enter Promotion" />
            </children>
        </VBox>

        <VBox layoutX="50.0" layoutY="300.0" prefWidth="300.0" spacing="10.0" />


          <Button layoutX="22.0" layoutY="437.0" onAction="#handleUpdate" prefWidth="140.0" text="Modifier" />
          <Button layoutX="236.0" layoutY="437.0" onAction="#handleCancel" prefWidth="140.0" text="Annuler" />
    </children>
</AnchorPane>
